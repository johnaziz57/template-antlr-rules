{
    "template_id": "core-large-more-button-template",
    "layout": {
      "pml_version": "0.1.0",
      "component": {
          {{#with moreTileItems}}
          "type": "TOUCHABLE",
          "accessibilityHint": "{{localize COPY.accessibilityHint}}",
          "on_press": {
            "action_type": "OPEN",
            "target": {{{template 'core-deeplink-resolver' deeplink=deeplink}}} 
          },
          "active_opacity": 0.5,
          "child": {
            "type": "CONTAINER",
            "width": "100%",
            "height": "100%",
            "border_radius": 12,
            "background_color": "WHITE",
