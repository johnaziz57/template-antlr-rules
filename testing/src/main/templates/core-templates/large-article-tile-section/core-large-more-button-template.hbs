                      ]
                    },
                    {
                      "type": "STACK",
                      "axis": "HORIZONTAL",
                      "spacing": 12,
                      "children": [
                        {
                          "type": "IMAGE",
                          "source": {
                            "id": "{{images.[3].id}}",
                            "width": 50,
                            "height": 50
                          },
                          "resize_mode": "CONTAIN",
