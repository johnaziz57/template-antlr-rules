{
  "template_id": "core-vertical-tiles-purchases-category-section",
  "layout": {
        "id": "vertical-article-tiles-section",
        "type": "BLOCK",
        "layout": {
            "type": "FLOW",
            "axis": "VERTICAL"
        },
        "size": {
            "crossAxis": "12g"
        },
        {{#with purchasesPageSectionData}}
        "children": [
                    {
                    "id": "vertical-article-tiles",
                    "type": "BLOCK",
                    "layout": {
                        "type": "FLOW",
                        "axis": "VERTICAL",
                        "spacing": {
                            "mainAxis": 4,
                            "crossAxis": 4
                        },
                        "padding": {
                            "left": 8,
                    "right": 8,
                        "top": 4,
                        "bottom": 4
                        }
                    },
                    "size": {
                        "crossAxis": "12g"
                    },
                    "children": [
                    
                        {{#each articles as | article |}}
                                {{#template 'core-vertical-article-tile-template' article=article features=articleFeatures}}
                                {{/template}}
                                {{#unless @last}},{{/unless}}
                        {{/each}}
                        
                    ]
                }
            
        ]
        {{/with}}
    },
    "context": {
        "articleFeatures": ["SHOW_CATEGORY_ACTION", "SHOW_REMOVE_FROM_PURCHASES_PAGE_ACTION"]
    },
    "metadata": {}
}