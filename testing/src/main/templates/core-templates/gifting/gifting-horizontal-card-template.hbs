                                {
                                    "type": "STACK",
                                    "axis": "HORIZONTAL",
                                    "distribution": "END",
                                    "width": "100%",
                                    "children": [
                                        {
                                            "type": "RICH_TEXT",
                                            "text_alignment": "END",
                                            "text_attributes": {
                                                "size": 20,
                                                "weight": "SEMIBOLD"
                                            },
                                            "markdown": ""
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "CONTAINER",
                            "child": {
                                "type": "IMAGE",
                                 "source": {
                                    "id": "picnic-page/{{#if (eq item.indexWithinProgram 0)}}{{giftImages.giftimageId0}}{{/if}}{{#if (eq item.indexWithinProgram 1)}}{{giftImages.giftimageId1}}{{/if}}{{#if (eq item.indexWithinProgram 2)}}{{giftImages.giftimageId2}}{{/if}}{{#if (eq item.indexWithinProgram 3)}}{{giftImages.giftimageId3}}{{/if}}{{#if (eq item.indexWithinProgram 4)}}{{giftImages.giftimageId4}}{{/if}}{{#if (gt item.indexWithinProgram 4)}}{{giftImages.giftimageId0}}{{/if}}"                     
                                },
                                "resize_mode": "CONTAIN",
                                "placeholder": "NONE",
                                "width": "100%",
                                "height": "100%"
                            },
                            "absolutePosition": {
                                "top": 0,
                                "bottom": 0,
                                "left": 0,
                                "right": 0
                            }
                        }
                        
                    ]
                }
            }
        }
    },
    "context": {
