{
    "template_id": "core-recipe-see-all-button-template",
    "layout": {
        "pml_version": "0.1.0",
        "component": {
            {{#with seeAllButton}}
            "type": "TOUCHABLE",
            "on_press": {
                "actionType": "OPEN",
                "target": {{{template 'core-deeplink-resolver' deeplink=deeplink}}}
            },
            "activeOpacity": 0.8,
            "activeScale": 0.98,
            "child": {
                "type": "CONTAINER",
                "overflow": "hidden",
                "border_radius": 8,
                "width": "100%",
                "height": "100%",
                "background_color": "WHITE",
                "child": {
        
                    "type": "IMAGE",
                    "source": {
                        "id": "{{backgroundImage}}"                      
                    },
                    "resize_mode": "COVER",
                    "placeholder": "NONE",
                    "width": "100%",
                    "height": "100%"
                            
                }
            }
            {{/with}}
        }
    },
    "context": {},
    "metadata": {}
}
