{
    "template_id": "core-recipe-more-button-template",
    "layout": {
        "pml_version": "0.1.0",
        "component": {
            "type": "TOUCHABLE",
            "on_press": {
                "actionType": "OPEN",
                "target": {{{template 'core-deeplink-resolver' deeplink=deeplink}}}
            },
            "child": {
                "type": "CONTAINER",
                "overflow": "hidden",
                "border_radius": 8,
                "width": "100%",
                "height": "100%",
                "background_color": "WHITE",
                "child": {
                    "type": "STACK",
                    "axis": "VERTICAL",
                    "width": "100%",
                    "height": "100%",
                    "alignment": "CENTER",
                    "distribution": "CENTER",
                    "padding": {
                        "left": 24,
                        "right": 24,
                        "bottom": 14
                    },
                    "spacing": 8,
                    "children": [
                        {
                            "type": "CONTAINER",
                            "height": 24,
                            "width": 24,
                            "border_radius": 100,
                            "background_color": "GREEN1",
                            "padding": {
                                "left": 6,
                                "right": 6,
                                "bottom": 6,
                                "top": 6
                            },   
                            "child": {
                                "type": "ICON",
                                "height": "100%",
                                "width": "100%",
                                "icon_key": "rightArrow",
                                "color": "WHITE"
                            }
                        }, {
                            "type": "RICH_TEXT",
                            "text_alignment": "CENTER",
                            "text_attributes": {
                                "size": 15,
                                "weight": "REGULAR"
                            },
                            "number_of_lines": 2,
                            "markdown": "#(GREEN1){{localize COPY.moreButtonTitle}}#(GREEN1)"
                        }
                    ]
                }
            }
        }
    },
    "context": {
        "COPY": {
          "moreButtonTitle" : {
                "nl": "Bekijk alles",
                "de": "Alles anzeigen",
                "fr": "Voir plus"
            }
        } 
    },
    "metadata": {}
}
