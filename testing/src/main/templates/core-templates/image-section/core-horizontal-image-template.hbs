{
    "template_id": "core-horizontal-image-template",
    "layout": {
        "pmlVersion": "0.1.0",
        "component": {
            {{#if item.deeplink}}
                "type": "TOUCHABLE",
                {{#if item.accessibilityLabel}}
                "accessibilityLabel": "{{item.accessibilityLabel}}",
                {{/if}}
                "accessibilityHint": "{{localize COPY.accessibilityHint}}",
                "onPress": {
                "actionType": "OPEN",
                "target": {{{template 'core-deeplink-resolver' deeplink=item.deeplink}}}
                },
                "activeOpacity": 0.8,
                "activeScale": 0.98,
                "child": {
            {{/if}}
            "type": "CONTAINER",
            {{#if item.accessibilityLabel}}
                "accessible": true,
                "accessibilityLabel": "{{item.accessibilityLabel}}",
            {{/if}}
            "overflow": "hidden",
            "borderRadius": 8,
            "width": "100%",
            "height": "100%",
            "backgroundColor": "WHITE",
            "child": {
                "type": "CONTAINER",
                "child": {
                "type": "IMAGE",
                "placeholder": "NONE",
                "source": {
                    "id": "{{item.imageId}}"
                },
                "resize_mode": "COVER",
                "width": "100%",
                "height": "100%"
                },
                "absolutePosition": {
                "top": 0,
                "bottom": 0,
                "left": 0,
                "right": 0
                }
            }
            {{#if item.deeplink}}
                }
            {{/if}}
        }
        },
  "context": {
      "COPY": {
          "accessibilityHint" : {
            "nl": "tik dubbel om te openen.",
            "de": "Tippe zwei Mal zum Ã–ffnen.",
            "fr": "Double-cliquer pour ouvrir"
          }
      }
  },
  "metadata": {}
} 
