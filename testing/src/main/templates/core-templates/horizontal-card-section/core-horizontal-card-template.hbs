  {
    "template_id": "core-horizontal-card-template",
    "layout": {
        "pml_version": "0.1.0",
        "component": {
            "type": "TOUCHABLE",
            {{#if item.accessibilityLabel}}
            "accessibilityLabel": "{{item.accessibilityLabel}}",
            {{else}}
            "accessibilityLabel": "{{#stripMarkdown (join ', ' item.label.text item.title item.subtitle)}}{{/stripMarkdown}}",
            {{/if}}
            "accessibilityHint": "{{localize COPY.accessibilityHint}}",
            "onPress": {
                "actionType": "OPEN",
                "target": {{{template 'core-deeplink-resolver' deeplink=item.deeplink}}}
            },
            "activeOpacity": 0.8,
            "activeScale": 0.98,
            "child": {
                "type":"CONTAINER",
                "overflow": "hidden",
                "border_radius": 12,
                "width": "100%",
                "height": "100%",
                "backgroundColor": "WHITE",
                "child": {
                    "type": "STACK",
                    "axis": "VERTICAL",
                    "distribution": "END",
                    "children": [
                        {
                            "type": "CONTAINER",
                            "child": {
                                "type": "IMAGE",
                                "source": {
                                    "id": "{{item.backgroundImage}}"                     
                                },
                                "resize_mode": "COVER",
                                "placeholder": "NONE",
                                "width": "100%",
                                "height": "100%"
                            },
                            "absolutePosition": {
                                "top": 0,
                                "bottom": 0,
                                "left": 0,
                                "right": 0
                            }
                        },
                        {
                            "type": "STACK",
                            "axis": "VERTICAL",
                            "distribution": "FILL",
                            "alignment": "FILL",
                            "padding": {
                                "left": 12,
                                "right": 12,
                                "top": 12,
                                "bottom": 12
                            },
                            "children": [
                                {
                                    "type": "STACK",
                                    "axis": "VERTICAL",
                                    "distribution": "END",
                                    "spacing": 4,
                                    "children": [
                                        {{#if item.labelText}}
                                        {
                                            "type": "CONTAINER",
                                            "background_color": "{{item.labelBackgroundColor}}",
                                            "height": 28,
                                            "border_radius": 4,
                                            "padding": {
                                                "top": 5,
                                                "bottom": 5,
                                                "left": 8,
                                                "right": 8
                                            },
                                            "child": {
                                                "type": "RICH_TEXT",
                                                "text_alignment": "START",
                                                "number_of_lines": 1,
                                                "text_attributes": {
                                                    "size": 16,
                                                    "weight": "MEDIUM"
                                                },
                                                "markdown": "#({{item.labelTextColor}}){{{item.labelText}}}#({{item.labelTextColor}})"
                                            }
                                        }  
                                            {{#or item.title item.subtitle}}
                                            ,
                                            {{/or}}
								        {{/if}}
                                        {{#if item.title}}
                                        {
                                            "type": "RICH_TEXT",
                                            "text_alignment": "START",
                                            "numberOfLines": 2,
                                            "text_attributes": {
                                                "size": 20,
                                                "weight": "SEMIBOLD"
                                            },
                                            "markdown": "{{{item.title}}}"
                                        }
                                        {{/if}}
                                        {{#and item.title item.subtitle}}
                                        ,
                                        {{/and}}
                                        {{#if item.subtitle}}
                                        {
                                            "type": "RICH_TEXT",
                                            "text_alignment": "START",
                                            "numberOfLines": 2,
                                            "text_attributes": {
                                                "size": 15,
                                                "weight": "REGULAR"
                                            },
                                            "markdown": "{{{item.subtitle}}}"
                                        }
                                        {{/if}}
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "context": {
        "COPY": {
          "accessibilityHint" : {
            "nl": "tik dubbel om te openen.",
            "de": "Tippe zwei Mal zum Ã–ffnen.",
            "fr": "Double-cliquer pour ouvrir"
          }
      }
    },
    "metadata": {}
  }
