  {
    "template_id": "core-sub-header-template",
    "layout": {
                "pml_version": "0.1.0",
                "component": {
                    {{#with subHeader}}
                    "type": "CONTAINER",
                    "accessible": true,
                    {{#if subHeaderButton}}
                    "accessibilityLabel": "{{#stripMarkdown (join ', ' title subtext (join ' ' (localize COPY.accessibilityHint) subHeaderButton.title))}}{{/stripMarkdown}}",
                    "accessibilityActions": [
                        {
                            "name": "activate",
                            "onAction": { "actionType": "OPEN", "target": "{{subHeaderButton.deeplink}}" }
                        }
                    ],
                    {{else}}
                    "accessibilityLabel": "{{#stripMarkdown (join ', ' title subtext)}}{{/stripMarkdown}}",
                    {{/if}}
                    "width": "100%",
                    "padding": {
                    {{#if subHeaderButton}}
                    "top": 16,
                    {{else}}
                    "top": 18,
                    {{/if}}
                    "bottom": 8,
                    "left": 16,
                    "right": 16
                    },
                    "child": {
                    "type": "STACK",
                    "axis": "VERTICAL",
                    "alignment": "CENTER",
                    "spacing": 4,
                    "height": "100%",
                    "children": [
                        {
                        "type": "STACK",
                        "axis": "HORIZONTAL",
                        "alignment": "CENTER",
                        "distribution": "SPACE_BETWEEN",
                        "width": "100%",
                        "children": [
                            {
                            "type": "STACK",
                            "axis": "HORIZONTAL",
                            "alignment": "CENTER",
                            "spacing": 12,
                            "children": [
                                {{#if icon}}
                                {
                                    "type": "RICH_TEXT",
                                    "textAlignment": "CENTER",
                                    "textAttributes": {
                                    "size": 18,
                                    "weight": "SEMIBOLD"
                                    },
                                    "markdown": "#(GREEN1)X#(GREEN1)"
                                },
                                {{/if}}
                                {
                                "type": "RICH_TEXT",
                                "textAlignment": "LEFT",
                                "numberOfLines": 1,
                                "textAttributes": {
                                    "size": 18,
                                    "weight": "SEMIBOLD"
                                },
                                "markdown": "#(GREY5){{{title}}}#(GREY5)"
                                }
                            ]
                            }
                            {{#if subHeaderButton}}
                            {{#with subHeaderButton}}
                            ,
                            {
                            "type": "TOUCHABLE",
                            "onPress": { "actionType": "OPEN", "target": "{{deeplink}}" },
                            "activeOpacity": 0.8,
                            "child": {
                                "type": "CONTAINER",
                                "padding": {
                                "top": 4,
                                "left": 8,
                                "right": 8
                                },
                                "backgroundColor": "{{backgroundColor}}",
                                "borderRadius": 4,
                                "child": {
                                    "type": "STACK",
                                    "axis": "HORIZONTAL",
                                    "alignment": "CENTER",
                                    "distribution": "CENTER",
                                    "spacing": 4,
                                    "children": [
                                        {
                                        "type": "RICH_TEXT",
                                        "textAlignment": "CENTER",
                                        "textAttributes": {
                                            "size": 14,
                                            "weight": "MEDIUM"
                                        },
                                        "markdown": "#({{textColor}}){{{title}}}#({{textColor}})"
                                        }
                                        {{#if icon}}
                                        ,
                                        {
                                            "type": "ICON",
                                            "height": 9,
                                            "aspect_ratio": 1,
                                            "icon_key": "{{icon}}",
                                            "color": "{{textColor}}"
                                        }
                                        {{/if}}
                                    ]
                                }
                            }
                            }
                            {{/with}}
                            {{/if}}
                        ]
                        }
                        {{#if subtext}}
                        ,
                        {
                        "type": "STACK",
                        "axis": "HORIZONTAL",
                        "alignment": "CENTER",
                        "distribution": "SPACE_BETWEEN",
                        "width": "100%",
                        "children": [
                            {
                            "type": "RICH_TEXT",
                            "textAlignment": ":LEFT",
                            "number_of_lines": 1
                            "textAttributes": {
                                "size": 15,
                                "weight": "REGULAR"
                            },
                            "markdown": "{{{subtext}}}"
                            }
                        ]
                        }
                        {{/if}}
                    ]
                    }
                {{/with}}
                }
            },
    "context": {
        "COPY": {
          "accessibilityHint" : {
            "nl": "tik dubbel om te openen.",
            "de": "Tippe zwei Mal zum Ã–ffnen.",
            "fr": "Double-cliquer pour ouvrir"
          }
      }
    },
    "metadata": {}
  }
