{
  "template_id": "bundle-overview-page",
  "layout": {
    "id": "bundle-overview-page",
    "body": {
      "type": "BLOCK",
      "id": "root",
      "layout": {
        "type": "FLOW",
        "axis": "VERTICAL",
        "background_color": "GREY1"
      },
      "size": {
        "cross_axis": "SCREEN_WIDTH"
      },
      "children": [
      {
          "id": "list-sub-header",
          "type": "BLOCK",
          "layout": {
            "type": "FLOW",
            "axis": "VERTICAL"
          },
          "size": {
            "crossAxis": "12g"
          },
          "children": [
            {
              "type": "PML",
              "id": "1",
              "size": {
                "mainAxis": 96,
                "crossAxis": "12g"
              },
              "pml": {{{template 'core-selling-unit-info-sub-header-localized' sellingUnit=sellingUnits.[0]}}}
            },
            {
              "type": "PML",
              "id": "1",
              "size": {
                "mainAxis": 48, 
                "crossAxis": "12g"
              },
              "pml": {{{template 'core-bundles-sub-header-template' title=(localize COPY.subHeaderTitle)}}}
            }
          ]
        },
        {
          "id": "list",
          "type": "BLOCK",
          "layout": {
            "type": "FLOW",
            "axis": "VERTICAL",
            "spacing": { "mainAxis": 4 },
            "padding": { "top": 4, "right": 8, "bottom": 4, "left": 8 }
          },
          "size": { "crossAxis": "SCREEN_WIDTH" },
          "children": [
            {{#gt sellingUnits.length 0}}
              {{#each sellingUnits as | sellingUnit |}}
                {{#template 'core-vertical-selling-unit-tile-template' sellingUnit=sellingUnit features=articleFeatures}}
                {{/template}},
              {{/each}}
            {{/gt}}
          ]
        }
      ]
    }
  },
  {{!-- The datasource query still needs to be updated to the correct one, once the BE is ready --}}
  "context": {
    "sellingUnits": {
      "$query": "SELECT * FROM lister_selling_units WHERE id IN ('s1045143', 's1047570', 's1047346')"
    },
    "articleFeatures": ["SHOW_CATEGORY_ACTION"],
    "COPY": {
      "subHeaderTitle": {
        "fr": "Kies je korting",
        "de": "Kies je korting",
        "nl": "Kies je korting"
      }
    }
  },
  "metadata": {
    "title": "Bundle overview page root",
    "type": "ROOT_PAGE",
    "properties_schema": "{\"properties\":{}}"
  }
}