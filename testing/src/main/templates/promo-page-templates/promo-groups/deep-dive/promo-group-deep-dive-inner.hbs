{
  "template_id": "promo-group-deep-dive-inner",
  "layout": {
    "id": "promo-group-deep-dive-inner",
    "type": "BLOCK",
    "layout": {
      "type": "FLOW",
      "axis": "VERTICAL"
    },
    "size": {
      "crossAxis": "12g"
    },
    {{#with promoGroup}}
    "children": [
      {
        "id": "vertical-selling-unit-tiles",
        "type": "BLOCK",
        "layout": {
          "type": "FLOW",
          "axis": "VERTICAL",
          "spacing": {
            "mainAxis": 4,
            "crossAxis": 4
          },
          "padding": {
            "left": 8,
             "right": 8,
            "top": 4,
            "bottom": 4
          }
        },
        "size": {
          "crossAxis": "12g"
        },
        "children": [
          {{#each sellingUnits as | sellingUnit |}}
            {{{template 'core-vertical-selling-unit-tile-template' sellingUnit=sellingUnit sectionContextTitle=promoGroup.title}}}
            {{#unless @last}},{{/unless}}
          {{/each}}
        ]
      }
    ]
    {{/with}}
  },
  "context": {},
  "metadata": {}
}
